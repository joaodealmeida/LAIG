#pragma once

#include "Board.h"
//#include <cereal/archives/json.hpp>

class GameState
{
	Board board;
	int player;
	bool playing;

	//Necessário para ter acesso
	//friend cereal::access;

public:
	GameState(){
		board = Board();
	}
	GameState(Board board, int player, bool playing){
		this->board = board;
		this->player = player;
		this->playing = playing;
	}

	void setPlayer(int player){
		this->player = player ;
	}

	int getPlayer(){
		return this->player;
	}

	Board getBoard(){
		return this->board;
	}

	bool getPlaying (){
		return this->playing;
	}

	template <class Archive> void serialize(Archive &archive) {
        archive(board, player, playing);
    };





	~GameState(){}
};

