#ifndef BLOCK_H
#define BLOCK_H

#include "CGF\CGFobject.h"
#include "Primitives.h"
#include "Rectangle.h"

#include <vector>

class Block: public Primitives
{
	GLenum drawstyle, normal;

public:
	Block(GLenum drawstyle, GLenum normal): Primitives(drawstyle, normal)  {
		this->normal = normal;
		this->drawstyle = drawstyle;
	}	

	void draw() {
		glPushMatrix();
		glScalef(0.7,0.7,0.7);
		glTranslatef(7.8, 6, 5);

		// FRONT 
		glBegin(GL_POLYGON);
		glColor3f(   1.0,  1.0, 1.0 );
		glVertex3f(  3, 0, 2 );
		glVertex3f(  3,  4, 2 );
		glVertex3f( 0,  4, 2 );
		glVertex3f( 0, 0, 2 );
		glEnd();

		// BACK
		glPushMatrix();
		glTranslatef(3,0,0);
		glRotatef(180,0,1,0); 

		glBegin(GL_POLYGON);
		glColor3f(   1.0,  1.0, 1.0 );
		glVertex3f(  3, 0, 0 );
		glVertex3f(  3,  4, 0 );
		glVertex3f( 0,  4, 0 );
		glVertex3f( 0, 0, 0 );
		glEnd();
		glPopMatrix();

		// RIGHT
		glBegin(GL_POLYGON);
		glColor3f(  1.0,  0.0,  1.0 );
		glVertex3f( 3, 0, 0 );
		glVertex3f( 3,  4, 0 );
		glVertex3f( 3,  4,  2 );
		glVertex3f( 3, 0,  2 );
		glEnd();

		// LEFT
		glBegin(GL_POLYGON);
		glColor3f(   0.0,  1.0,  0.0 );
		glVertex3f( 0, 0, 2 );
		glVertex3f( 0, 4, 2 );
		glVertex3f( 0, 4, 0 );
		glVertex3f( 0, 0, 0 );
		glEnd();

		// TOP
		glBegin(GL_POLYGON);
		glColor3f(   0.0,  0.0,  1.0 );
		glVertex3f(  3,  4,  2 );
		glVertex3f(  3,  4, -0 );
		glVertex3f( -0,  4, -0 );
		glVertex3f( -0,  4,  2 );
		glEnd();

		// BOTTOM
		glBegin(GL_POLYGON);
		glColor3f(   1.0,  0.0,  0.0 );
		glVertex3f(  3, -0, -0);
		glVertex3f(  3, -0,  2 );
		glVertex3f( -0, -0,  2 );
		glVertex3f( -0, -0, -0 );
		glEnd();

		glPopMatrix();

	}

	virtual ~Block(void) {}
};
#endif
